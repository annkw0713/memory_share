<div class="user-page">
  <div class="user-contents">
    <p class="user-name"><%= @user.nickname %>さんのマイページ</p>
    <% if current_user != @user %>
      <% if @user.followed_by?(current_user) %>
        <%=link_to "フォローを外す", user_relationships_path(@user.id),class: "btn" , method: :delete %>
      <% else %>
        <%=link_to "フォローする", user_relationships_path(@user.id),class: "btn" ,method: :post %>
      <% end %>
    <% end %>
  </div>
</div>